import java.util.Scanner;

public class whatDay
{
    public static void main(String[] args)
    {
        Scanner key = new Scanner(System.in);
        int age;
        String day;

        System.out.println("Enter your age: ");
        age = key.nextInt();
        System.out.println("Enter the day of the week: ");
        day = key.next();

        if (age < 18)
        {
            if (day == "Saturday" || day == "Sunday")
            {
                System.out.println("It is time to celebrate the weekend!");
            }//end of inner minors if
            else
            {
                System.out.println("It is a school day.");
            }// end of inner else for minor
        }//  end of minors if
        else
        {
            if (day != "Saturday" || day != "Sunday")
            {
                System.out.println("It is time to celebrate the weekend!");
            }//end of inner if for adults
            else
            {
                System.out.println("It is a work day.");
            }// end of inner else for adults
        }//end of else for minor
    }// end of main method
}// end of class
